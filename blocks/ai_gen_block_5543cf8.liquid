{% doc %}
  @prompt
    ANNOUNCEMENT BAR SCROLLING WITH FULL CONTROL
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-bar-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    overflow: hidden;
    position: relative;
  }

  .ai-announcement-bar__wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    height: {{ block.settings.bar_height }}px;
    position: relative;
  }

  .ai-announcement-bar__track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
  }

  .ai-announcement-bar__track-{{ ai_gen_id }}.paused {
    animation-play-state: paused;
  }

  .ai-announcement-bar__item-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 0 {{ block.settings.item_spacing }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  {% if block.settings.text_transform == 'uppercase' %}
    .ai-announcement-bar__item-{{ ai_gen_id }} {
      text-transform: uppercase;
    }
  {% elsif block.settings.text_transform == 'capitalize' %}
    .ai-announcement-bar__item-{{ ai_gen_id }} {
      text-transform: capitalize;
    }
  {% endif %}

  .ai-announcement-bar__item-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: {% if block.settings.link_underline %}underline{% else %}none{% endif %};
  }

  .ai-announcement-bar__item-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-announcement-bar__separator-{{ ai_gen_id }} {
    display: inline-block;
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-announcement-bar__track-{{ ai_gen_id }}.scrolling {
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  {% if block.settings.enable_gradient %}
    .ai-announcement-bar-{{ ai_gen_id }}::before,
    .ai-announcement-bar-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: {{ block.settings.gradient_width }}px;
      z-index: 2;
      pointer-events: none;
    }

    .ai-announcement-bar-{{ ai_gen_id }}::before {
      left: 0;
      background: linear-gradient(to right, {{ block.settings.background_color }}, transparent);
    }

    .ai-announcement-bar-{{ ai_gen_id }}::after {
      right: 0;
      background: linear-gradient(to left, {{ block.settings.background_color }}, transparent);
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-announcement-bar__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_bar_height }}px;
    }

    .ai-announcement-bar__item-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<announcement-bar-{{ ai_gen_id }}
  class="ai-announcement-bar-{{ ai_gen_id }}"
  data-scroll-speed="{{ block.settings.scroll_speed }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  data-enable-scroll="{{ block.settings.enable_scroll }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-announcement-bar__wrapper-{{ ai_gen_id }}">
    <div class="ai-announcement-bar__track-{{ ai_gen_id }}">
      {% for i in (1..2) %}
        {% if block.settings.message_1 != blank %}
          <div class="ai-announcement-bar__item-{{ ai_gen_id }}">
            {{ block.settings.message_1 }}
          </div>
          {% if block.settings.separator != blank %}
            <span class="ai-announcement-bar__separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_2 != blank %}
          <div class="ai-announcement-bar__item-{{ ai_gen_id }}">
            {{ block.settings.message_2 }}
          </div>
          {% if block.settings.separator != blank %}
            <span class="ai-announcement-bar__separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_3 != blank %}
          <div class="ai-announcement-bar__item-{{ ai_gen_id }}">
            {{ block.settings.message_3 }}
          </div>
          {% if block.settings.separator != blank %}
            <span class="ai-announcement-bar__separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_4 != blank %}
          <div class="ai-announcement-bar__item-{{ ai_gen_id }}">
            {{ block.settings.message_4 }}
          </div>
          {% if block.settings.separator != blank %}
            <span class="ai-announcement-bar__separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_5 != blank %}
          <div class="ai-announcement-bar__item-{{ ai_gen_id }}">
            {{ block.settings.message_5 }}
          </div>
          {% if block.settings.separator != blank and i == 1 %}
            <span class="ai-announcement-bar__separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</announcement-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class AnnouncementBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-announcement-bar__track-{{ ai_gen_id }}');
        this.scrollSpeed = parseFloat(this.dataset.scrollSpeed);
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';
        this.enableScroll = this.dataset.enableScroll === 'true';
      }

      connectedCallback() {
        if (this.enableScroll) {
          this.initScroll();
        }

        if (this.pauseOnHover) {
          this.setupHoverPause();
        }
      }

      initScroll() {
        this.track.classList.add('scrolling');
      }

      setupHoverPause() {
        this.addEventListener('mouseenter', () => {
          this.track.classList.add('paused');
        });

        this.addEventListener('mouseleave', () => {
          this.track.classList.remove('paused');
        });
      }
    }

    customElements.define('announcement-bar-{{ ai_gen_id }}', AnnouncementBar{{ ai_gen_id }});
  })();
</script>

